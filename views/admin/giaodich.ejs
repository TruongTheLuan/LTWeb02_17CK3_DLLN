<html>

<head>
  <meta charset="UTF-8">
  <link type="text/css" rel="stylesheet" href="/css/bootstrap.min.css" />
  <link type="text/css" rel="stylesheet" href="/css/admin-styles.css" />
  <link type="text/css" rel="stylesheet" href="/css/font-awesome.min.css" />
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
    integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous">
  </script>
  <script src="/js/jquery-3.2.1.min.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/admin-js.js"></script>

  <title>Admin Homepage - Trang Quản Lí DLLN Bank</title>
</head>

<body>
  <%  
          function format_date(current_datetime){
              return current_datetime.getDate() + "/" + (current_datetime.getMonth() + 1) + "/" + current_datetime.getFullYear();
          }
        %>
  <div class="wrapper">
    <!-- header -->
    <%- include('../templates/admin_header'); -%>
    <div id="content">
      <!-- navbar -->
      <%- include('../templates/admin_navbar'); -%>
      <div>
        <h2>Thông tin Toàn Bộ Các Giao Dịch</h2>
        <form action="/admin/account/giao-dich/tim-kiem" method="post">
          <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Tìm Kiếm Thông Tin Giao dịch theo Số Tài Khoản"
              name="sotaikhoan">
            <div class="input-group-append">
              <button class="btn btn-outline-secondary">Tìm Kiếm</button>
            </div>
          </div>
        </form>

        <% if(giaodichs.length != 0){ %>


        <table class="table table-bordered">
          <thead>
            <tr>
              <th scope="col">STT</th>
              <th scope="col">Số Tài Khoản</th>
              <th scope="col">Loại Tài Khoản</th>
              <th scope="col">Hình Thức Chuyển tiền</th>
              <th scope="col">Số Tiền</th>
              <th scope="col">Đơn Vị Tiền tệ</th>
              <th scope="col">Ngày Chuyển</th>
            </tr>
          </thead>
          <tbody>


            <% giaodichs.forEach(function(giaodich, index){ %>
            <tr>
              <th scope="row"><%= index %></th>
              <td><%= giaodich.SoTaiKhoan %></td>
              <td><%= giaodich.TenLoaiTaiKhoan %></td>
              <td><%= giaodich.TenLoaiHinhThuc %></td>
              <td><%= giaodich.SoTienGiaoDich %></td>
              <td><%= giaodich.DonViTienTe %></td>
              <td><%= format_date(giaodich.NgayThucHien)%></td>
            </tr>
            <% }); %>


          </tbody>
        </table>
        <% } else { %>
        <p>Hiện Tại DLLN Bank Chưa Có Bất Kì Giao Dịch Nào</p>
        <% } %>
      </div>
    </div>
  </div>
</body>

</html>